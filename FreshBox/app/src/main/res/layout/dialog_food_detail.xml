<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 이미지 표시 -->
        <ImageView
            android:id="@+id/imageViewFood"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="식품 이미지" />

        <!-- 텍스트 정보들 -->
        <TextView android:id="@+id/textFoodName" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20sp" android:textStyle="bold" />
        <TextView android:id="@+id/textExpiryDate" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/textQuantity" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/textCategory" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/textStorage" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/textPurchaseDate" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/textMemo" android:layout_width="match_parent" android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
